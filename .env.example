# === Database Backend ===
# Options: "sqlite" (default, no setup needed) or "postgres"
DB_BACKEND=sqlite
SQLITE_DB_PATH=adk_enterprise.db

# === PostgreSQL (only if DB_BACKEND=postgres) ===
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=adk_sessions
POSTGRES_USER=adk_user
POSTGRES_PASSWORD=adk_password

# === Application ===
APP_NAME=my_adk_agent
AGENT_NAME=assistant
MODEL_USED=ollama/llama3.2

# === Tenant (default for testing) ===
TENANT_ID=a0eebc99-9c0b-4ef8-bb6d-6bb9bd380a11
TENANT_NAME=test_app

# === Ollama ===
OLLAMA_HOST=http://localhost:11434

# === Google API Key (needed by ADK, use dummy for Ollama) ===
GOOGLE_API_KEY=dummy-key-for-ollama

# === Evaluation ===
JUDGE_MODEL=llama3.2

# === Dashboard ===
DASHBOARD_PORT=8050
